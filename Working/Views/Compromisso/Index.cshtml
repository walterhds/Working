@model IEnumerable<Dominio.Entidades.Compromisso>

@{
    ViewBag.Title = "Agenda";
}

<div class="modal fade" id="NovoCompromisso">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Novo Compromisso</h4>
            </div>
            <div class="modal-body form-working">
                <form role="form" method="post" class="form-horizontal">
                    <div class="form-group">
                        <label for="Data" class="control-label col-sm-2">Data:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control datepicker" name="Data" id="Data" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Hora" class="control-label col-sm-2">Hora:</label>
                        <div class="col-sm-10">
                            <input type="text" name="Hora" class="form-control" required pattern="([01]?[0-9]|2[0-3]):[0-5][0-9]" title="Digite o horario: HH:MM" id="Hora" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Descricao" class="control-label col-sm-2">Descrição:</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" name="Descricao" id="Descricao" required></textarea>
                        </div>
                    </div>
                    <button type="button" class="btn btn-success" id="Salvar">
                        <span class="glyphicon glyphicon-floppy-saved"></span>
                        Cadastrar
                    </button>
                    <button type="button" class="btn btn-danger" id="Cancelar" data-dismiss="modal">
                        <span class=" glyphicon glyphicon-remove"></span>
                        Cancelar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="AlterarCompromisso">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Alterar Compromisso</h4>
                </div>
                <div class="modal-body form-working">
                    <form role="form" method="post" class="form-horizontal">
                        <input hidden="" id="id" />
                        <div class="form-group">
                            <div class="form-group">
                                <label for="Data" class="control-label col-sm-2">Data:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control datepicker" name="Data" id="DataAlterar" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Hora" class="control-label col-sm-2">Hora:</label>
                                <div class="col-sm-10">
                                    <input type="text" name="Hora" class="form-control" required pattern="([01]?[0-9]|2[0-3]):[0-5][0-9]" title="Digite o horario: HH:MM" id="HoraAlterar" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Descricao" class="control-label col-sm-2">Descrição:</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" name="Descricao" id="DescricaoAlterar" required></textarea>
                                </div>
                            </div>
                            <button type="button" class="btn btn-success" id="SalvarAlterar" onclick="Alterar($('#id').val(),$('#DataAlterar').val(),$('#HoraAlterar').val(),$('#DescricaoAlterar').val())">
                                <span class="glyphicon glyphicon-floppy-saved"></span>
                                Alterar
                            </button>
                            <button type="button" class="btn btn-danger" id="CancelarAlterar" data-dismiss="modal">
                                <span class=" glyphicon glyphicon-remove"></span>
                                Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-working col-md-9">
    <div class="titulo1">
        <h1>Agenda</h1>
    </div>

    <div style="padding-top: 10px; padding-bottom: 10px;">
        <button class="btn btn-success" data-toggle="modal" data-target="#NovoCompromisso">
            <span class="glyphicon glyphicon-plus"></span>
            Cadastrar
        </button>
        <button class="btn btn-danger" onclick="location.href='/Compromisso/Antigos'"><span class="glyphicon glyphicon-search"></span>
            Antigos
        </button>
    </div>

    <table class="table table-bordered table-hover table-working">
        <tr>
            <th>Data</th>
            <th>Compromisso</th>
            <th>Horário</th>
            <th>Operações</th>
            <th style="border-color: transparent !important; background-color: transparent !important;"></th>
        </tr>

        @foreach (var i in Model.OrderBy(e => e.Data).ThenBy(e => e.Hora))
        {
            if (i.Situacao == 0)
            {
            <tr>
                <td>@i.Data.Day.ToString("D2")/@i.Data.ToString("MMMM")</td>
                <td>@i.Descricao</td>
                <td>@i.Hora</td>
                <td style="text-align: center">
                    <div class="btn-group btn-group-xs">
                        <button class="btn btn-default" onclick="PopularModal(@i.Id);" id="@i.Id" title="Alterar" data-toggle="modal" data-target="#AlterarCompromisso"><span class="glyphicon glyphicon-pencil"></span></button>
                        <button class="btn btn-danger" onclick="DeletaCompromisso(@i.Id);" title="Excluir" aria-hidden="true"><span class="glyphicon glyphicon-remove"></span></button>
                        <button class="btn btn-success" onclick="ConfirmarCompromisso(@i.Id);" title="Confirmar"><span class="glyphicon glyphicon-ok"></span></button>
                    </div>
                </td>
                <td style="border-color: transparent !important; background-color: transparent !important;">
                    @if (DateTime.Now > i.Hora.AsDateTime() && DateTime.Now > i.Data)
                    {
                    <span class="glyphicon glyphicon-exclamation-sign" style="color: red;"></span>
                    }
                </td>
            </tr>
            }
        }
    </table>
</div>

@section Scripts{
    <script src="~/Scripts/compromisso.js"></script>
}