@{
    ViewBag.Title = "Cadastrar Cliente";
}

<div class="form-working">
    <ol class="breadcrumb col-md-7">
        <li><a href="~/Home/Index">Home</a></li>
        <li><a href="~/Cliente/Index">Clientes</a></li>
        <li class="active">Cadastrar</li>
    </ol>
    
    <div class="titulo1 col-md-7">
        <h1>Cadastrar Cliente</h1>
    </div>
    
    <form role="form" method="post" class="form-horizontal col-md-6" style="padding-top: 10px;">
        <div class="form-group">
            <label for="Nome" class="col-sm-2 control-label">Nome:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="Nome" required />
            </div>
        </div>
        <div class="form-group">
            <label for="Telefone" class="col-sm-2 control-label">Telefone:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="Telefone" required />
            </div>
        </div>
        <div class="form-group">
            <label for="Contato" class="col-sm-2 control-label">Contato:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="Contato" required />
            </div>
        </div>
        <div class="form-group">
            <label for="Celular" class="col-sm-2 control-label">Celular:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="Celular" required />
            </div>
        </div>
        <div class="form-group">
            <label for="Email" class="col-sm-2 control-label">Email:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="Email" required />
            </div>
        </div>
        <div class="titulo2">
            <h2>Acesso ao sistema</h2>
        </div>
        <div class="form-group" style="padding-top: 10px;">
            <label for="Login" class="col-sm-2 control-label">Login:</label>
            <div class="col-sm-10">
                <input class="form-control" autocomplete="off" type="text" name="Login" required />
            </div>
        </div>
        <div class="form-group">
            <label for="Senha" class="col-sm-2 control-label">Senha:</label>
            <div class="col-sm-10">
                <input class="form-control" type="password" name="Senha" required />
            </div>
        </div>
        <button class="btn btn-success" type="submit">
            <span class="glyphicon glyphicon-floppy-saved"></span>
            Cadastrar
        </button>
    </form>
</div>
