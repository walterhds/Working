@{
    ViewBag.Title = "Cadastrar Tipo de Conta";
}

<div class="form-working">
    <ol class="breadcrumb col-md-7">
        <li><a href="~/Home/Index">Home</a></li>
        <li><a href="~/TipoConta/Index">Tipos de Conta</a></li>
        <li class="active">Cadastrar</li>
    </ol>
    
    <div class="titulo1 col-md-7">
        <h1>Cadastrar Tipo de Conta</h1>
    </div>
    
    <form role="form" method="post" class="form-horizontal col-md-6" style="padding-top: 10px;">
        <div class="form-group">
            <label for="Descricao" class="col-sm-2 control-label">*Nome:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="Descricao" required />
            </div>
        </div>
        <button class="btn btn-success" type="submit">
            <span class="glyphicon glyphicon-floppy-saved"></span>
            Cadastrar
        </button>
    </form>
</div>
